generator client {
  provider = "prisma-client-js"
//  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Owner {
  id         Int @id @default(autoincrement())
  owner_name String? @db.VarChar(225)
  ProductOwner ProductOwner[]

  @@map("owners")
}

model Product {
  product_id      Int @id @default(autoincrement())
  product_name    String? @db.VarChar(85)
  product_brand   String? @db.VarChar(45)
  created_date    String? @db.VarChar(45)
  ProductOwner ProductOwner?

  @@map("products")
}

model ProductOwner {
  products_id Int  @id @unique
  owners_id   Int?
  product     Product  @relation(fields: [products_id], references: [product_id])
  owner       Owner?   @relation(fields: [owners_id], references: [id])

  @@map("products_owners")
}